---
import PageLayout from "@/layout/PageLayout.astro";

const title = "Astro";
const description = "Build faster websites with less client-side Javascript.";

---

<PageLayout title={title} description={description}>
	<div class="flex flex-col items-center justify-center min-h-screen py-2">
		<header class="flex flex-col items-center justify-center">
			<h1 class="text-4xl font-bold mt-4">Welcome to Astro</h1>
		</header>
		<main class="flex flex-col items-center justify-center flex-1 px-20 text-center">
			<p class="mt-4 text-lg">
				To get started, edit <code class="p-2 font-mono text-sm bg-gray-100 rounded-md">src/pages/index.astro</code> and save to reload.
			</p>
			<a href="https://docs.astro.build" class="mt-4 text-blue-500 hover:underline">Learn Astro</a>
			<a href="/welcome">
				go welcome page
			</a>
		</main>
	</div>
</PageLayout>