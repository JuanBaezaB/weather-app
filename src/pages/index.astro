---
import PageLayout from "@/layout/PageLayout.astro";

const title = "Weather App";
const description = "Weather App built with Astro";

---

<PageLayout title={title} description={description}>
	<nav class="flex flex-row space-x-4">
		<a href="/" class="text-lg font-semibold text-slate-900 dark:text-white">Home</a>
		<a href="/forecast/daily" class="text-lg font-semibold text-slate-900 dark:text-white">Daily</a>
		<a href="/forecast/hourly" class="text-lg font-semibold text-slate-900 dark:text-white">Hourly</a>
		<a href="/forecast/weekly" class="text-lg font-semibold text-slate-900 dark:text-white">Weekly</a>
	</nav>
	
	<div class="max-w-7xl mx-auto px-4 py-6 sm:px-6 lg:px-8 ">
		<h1 class="text-4xl font-bold text-gray-900 dark:text-white">Welcome to Astro</h1>
		<p class="mt-4 text-lg text-gray-500 dark:text-gray-400">
			Build faster websites with less client-side Javascript.
		</p>
	</div>
</PageLayout>